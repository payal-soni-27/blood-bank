{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/types/*.d.ts"],
  },
  "include": ["./*.js", "src/**/*.ts", "test/**/*.ts"]
}
